<h2 class="mb-4">Patients</h2>

<a href="/admin/patients/add" class="btn btn-primary mb-3">+ Add Patient</a>

<form class="d-flex mb-3" method="GET" action="/admin/patients">
  <input class="form-control me-2" type="search" name="search" value="<%= search || '' %>"
    placeholder="Search patient...">
  <button class="btn btn-outline-success" type="submit">Search</button>
</form>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>#</th>
      <th>Code</th>
      <th>Name</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (patients.length===0) { %>
      <tr>
        <td colspan="5" class="text-center">No patients found</td>
      </tr>
      <% } else { %>
        <% patients.forEach((pat, idx)=> { %>
          <tr>
            <td>
              <%= (currentPage - 1) * 5 + idx + 1 %>
            </td>
            <td>
              <%= pat.patientCode %>
            </td>
            <td>
              <%= pat.name %>
            </td>
            <td>
              <%= pat.dateOfBirth ? new Date(pat.dateOfBirth).toLocaleDateString() : '-' %>
            </td>

            <td>
              <a href="/admin/patients/<%= pat.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <a href="/admin/patients/<%= pat.id %>/delete" class="btn btn-sm btn-danger"
                onclick="return confirm('Are you sure?')">Delete</a>
            </td>
          </tr>
          <% }) %>
            <% } %>
  </tbody>
</table>

<nav>
  <ul class="pagination justify-content-center">
    <% for (let i=1; i <=totalPages; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
          <%= i %>
        </a>
      </li>
      <% } %>
  </ul>
</nav>